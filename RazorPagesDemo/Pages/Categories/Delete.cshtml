@page
@model RazorPagesDemo.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        <input type="hidden" hidden asp-for="Category.Id" />
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.Name"></label>
            <input class="form-control" asp-for="Category.Name" disabled />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.DisplayOrder"></label>
            <input class="form-control" asp-for="Category.DisplayOrder" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-outline-secondary form-control"> Back To List</a>
            </div>
        </div>
    </div>
</form>

